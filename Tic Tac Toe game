#include <iostream>
using namespace std;
int main() {

	string q = "yes";
	string p;
	cout << "Enter play to start\n";
	cin >> p;
	if (p == "play") {
		while (q == "yes") {
			int x[3][3] = { {1,2,3},{4,5,6},{7,8,9} };
			cout << "the board\n";
			for (int i = 0; i < 3; i++)
			{
				for (int j = 0; j < 3; j++)
				{
					cout << x[i][j] << " ";
				}
				cout << "\n";
			}
			int count = 0;
			string s = "who";
			string ox[3][3];
			for (int i = 0; i <= 4; i++)
			{
				int l;
				cout << "player 1 turn \n ";
				cin >> l;
				for (int i = 0; i < 3; i++)
				{
					for (int j = 0; j < 3; j++)
					{
						if (x[i][j] == l)
						{
							ox[i][j] = 'x';
						}
					}
				}for (int i = 0; i < 3; i++)
				{
					for (int j = 0; j < 3; j++)
					{
						if (ox[i][j] != "\u0000")
							cout << ox[i][j] << " ";
						else cout << x[i][j] << " ";
					}cout << "\n";

				}if (ox[0][0] == ox[0][1] && ox[0][2] == ox[0][1] && ox[0][1] == "x")//صف اول
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[1][0] == ox[1][1] && ox[1][2] == ox[1][0] && ox[1][0] == "x")//صف ثاني
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[2][0] == ox[2][1] && ox[2][0] == ox[2][2] && ox[2][2] == "x")//صف ثالث
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[0][0] == ox[1][0] && ox[2][0] == ox[1][0] && ox[0][0] == "x")//عمود اول
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[0][2] == ox[1][2] && ox[2][2] == ox[1][2] && ox[2][2] == "x")//عمود ثالث
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[0][1] == ox[1][1] && ox[2][1] == ox[1][1] && ox[1][1] == "x")//عمود ثاني
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[1][1] == ox[2][2] && ox[0][0] == ox[2][2] && ox[2][2] == "x")//قطر رئيسي
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				else if (ox[0][2] == ox[1][1] && ox[2][0] == ox[1][1] && ox[1][1] == "x")//قطر غير رئيسي
				{
					s = "player 1 won";
					cout << "player 1 won";
				}
				count += 1;
				if (s == "player 1 won")
					break;
				else if (count == 9 && s == "who")
				{
					cout << "No one won";
					break;
				}
				cout << "player 2 turn \n";
				cin >> l;

				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++)
					{
						if (x[i][j] == l)
						{
							ox[i][j] = 'o';
						}
					}
				}for (int i = 0; i < 3; i++)
				{
					for (int j = 0; j < 3; j++)
					{
						if (ox[i][j] != "\u0000")
							cout << ox[i][j] << " ";
						else cout << x[i][j] << " ";
					}cout << "\n";
				}

				if (ox[0][0] == ox[0][1] && ox[0][2] == ox[0][1] && ox[0][1] == "o")//صف اول
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[1][0] == ox[1][1] && ox[1][2] == ox[1][0] && ox[1][0] == "o")//صف ثاني
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[2][0] == ox[2][1] && ox[2][0] == ox[2][2] && ox[2][2] == "o")//صف ثالث
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[0][0] == ox[1][0] && ox[2][0] == ox[1][0] && ox[0][0] == "o")//عمود اول
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[0][2] == ox[1][2] && ox[2][2] == ox[1][2] && ox[2][2] == "o")//عمود ثالث
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[0][1] == ox[1][1] && ox[2][1] == ox[1][1] && ox[1][1] == "o")//عمود ثاني
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[1][1] == ox[2][2] && ox[0][0] == ox[2][2] && ox[2][2] == "o")//قطر رئيسي
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				else if (ox[0][2] == ox[1][1] && ox[2][0] == ox[1][1] && ox[1][1] == "o")//قطر غير رئيسي
				{
					s = "player 2 won";
					cout << "player 2 won";
				}
				count += 1;
				if (s == "player 2 won")
					break;
			}cout << "\n" << "Do you want to play again?  ";
			cin >> q;
		}
	}
}
